<h1>New Post</h1>


<% if @post.errors.any? %>
	<div class='alert alert-error' >	
		<strong> Error: </strong> Your post was invalid!
		<ul>
			<% @post.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>	


<%= form_for @post, html: {multipart: true} do |f| %>

	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<div>
		<%= f.label :link %>
		<%= f.text_field :link %>
	</div>

	<div>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>

	<%= f.submit "Save Post", class: 'btn btn-primary' %>

<% end %>

